<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_ripple_normal_selector"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/nor_padding_15"
    android:paddingTop="@dimen/nor_padding_10"
    android:paddingRight="@dimen/nor_padding_15"
    android:paddingBottom="@dimen/nor_padding_10">

    <TextView
        android:id="@+id/textViewNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_margin"
        android:textColor="@color/black3"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/textViewNoteComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black6"
        android:textSize="@dimen/normal_text_size" />


</LinearLayout>